<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">
    <xacro:include filename = "inertial_macros.xacro"/>
    <material name = "white">
        <color rgba = "1 1 1 1" />  
    </material>

    <material name = "black">
        <color rgba = "0 0 0 1" />  
    </material>

    <material name = "orange">
        <color rgba = "1 0.3 0.1 1" />  
    </material>

    <!-- base link -->
    <link name = "base_link">

    </link>

    <joint name = "base_link" type = "fixed">
        <parent link = "base_link"/>
        <child link = "body"/>
        <origin xyz = "-0.1 0 0"/>
    </joint>

    <!-- body link -->

    <link name = "body">
        <visual>
            <origin xyz = "0.135 0 0.07"/>
            <geometry>
                <box size = "0.27 0.168 0.10577" /> 
            </geometry>
            
            <material name = "white"/>
        </visual>

        <collision>
            <origin xyz = "0.135 0 0.07"/>
            <geometry>
                <box size = "0.27 0.168 0.10577" /> 
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.7" x="0.27" y="0.168" z="0.10577">
            <origin xyz = "0.135 0 0.07" rpy = "0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- right wheel link -->

    <joint name = "r_wheel_joint" type = "continuous">
        <parent link = "base_link"/>
        <child link = "r_wheel"/>
        <origin xyz = "0.135 -0.094 0.03454" rpy = "${pi/2} 0 0"/>
        <axis xyz = "0 0 -1"/>
    </joint>

    <link name = "r_wheel">
        <visual>    
            <geometry>
                <cylinder radius = "0.035" length = "0.020"/>
            </geometry>
            <material name = "black"/>
        </visual>

        <collision>    
            <geometry>
                <cylinder radius = "0.035" length = "0.020"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.04" length="0.02" radius="0.035">
            <origin xyz = "0 0 0" rpy = "0 0 0 "/>
        </xacro:inertial_cylinder>

    </link>


    <!-- left wheel link -->

    <joint name = "l_wheel_joint" type = "continuous">
        <parent link = "base_link"/>
        <child link = "l_wheel"/>
        <origin xyz = "0.135 0.094 0.03454" rpy = "-${pi/2} 0 0"/>
        <axis xyz = "0 0 1"/>
    </joint>

    <link name = "l_wheel">
        <visual>    
            <geometry>
                <cylinder radius = "0.035" length = "0.02"/>
            </geometry>
            <material name = "black"/>
        </visual>

        <collision>    
            <geometry>
                <cylinder radius = "0.035" length = "0.02"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.04" length="0.02" radius="0.035">
            <origin xyz = "0 0 0" rpy = "0 0 0 "/>
        </xacro:inertial_cylinder>
    </link>

    <!-- cylinder-->

    <joint name = "l_cylinder_joint" type = "fixed">
       <parent link = "body"/>
       <child link = "l_cylinder"/>
       <origin xyz = "0.045 0 0.010615" rpy = "0 0 0"/>

    </joint>

    <link name = "l_cylinder">
         <visual>
            <geometry>
                <cylinder radius = "0.0075" length = "0.01023"/>
            </geometry>
            <material name = "black"/>
        </visual>

        <collision>
            <geometry>
                <cylinder radius = "0.0075" length = "0.01023"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.001" radius="0.0075" length="0.01023">
            <origin xyz = "0 0 0" rpy = "0 0 0 "/>
        </xacro:inertial_cylinder>

        
    </link>


    <!-- ball castor-->

    <joint name = "l_castor_joint" type = "fixed">
        <parent link = "l_cylinder"/>
        <child link = "l_castor"/>
        <origin xyz = "0 0 -0.004" rpy = "0 0 0"/>
    </joint>

    <link name = "l_castor">
         <visual>
            <geometry>
                <sphere radius = "0.0075" />
            </geometry>
            <material name = "orange"/>
        </visual>

        <collision>
            <geometry>
                <sphere radius = "0.0075" />
            </geometry>
        </collision>

        <xacro:inertial_sphere mass="0.01" radius="0.0075">
            <origin xyz = "0 0 0" rpy = "0 0 0 "/>
        </xacro:inertial_sphere>

    </link>


    

    

</robot>